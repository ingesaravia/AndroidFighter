<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wall4"
    tools:context="com.example.androidfighter.MainActivity" >
	<!-- para fondo de la actividad android:background=@drawable/fondo-->

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:text="PRESIONA" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/button1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnLinterna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/txtNotificaciones"
        android:text="LINTERNA" />

    <Button
        android:id="@+id/btnGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLinterna"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txtNotificaciones"
        android:text="GPS" />

    <Button
        android:id="@+id/btnNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGPS"
        android:layout_below="@+id/btnGPS"
        android:layout_marginTop="16dp"
        android:onClick="onClickMostrarNotif"
        android:text="NOTIFICACION" />

    <EditText
        android:id="@+id/txtNotificaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnNotificaciones"
        android:layout_alignLeft="@+id/editText1"
        android:ems="10" />

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnLinterna"
        android:layout_alignBottom="@+id/btnLinterna"
        android:layout_alignRight="@+id/editText1"
        android:layout_toRightOf="@+id/btnNotificaciones"
        android:text="MAPS" />

    <Button
        android:id="@+id/btnInterfaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnNotificaciones"
        android:layout_alignLeft="@+id/btnMaps"
        android:layout_alignRight="@+id/txtNotificaciones"
        android:text="INTERFACES" />

    <Button
        android:id="@+id/btnLimpiarCelu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnNotificaciones"
        android:layout_marginTop="22dp"      
        android:text="CLEAN PHONE" />

    <Button
        android:id="@+id/btnGaleria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnWap"
        android:layout_alignBottom="@+id/btnWap"
        android:layout_alignLeft="@+id/btnInterfaces"
        android:layout_alignRight="@+id/txtNotificaciones"
        android:text="GALERIA" />

    <Button
        android:id="@+id/btnCamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnWap"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnWap"
        android:text="CAMARA" />

    <Button
        android:id="@+id/btnSdkVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGaleria"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnGaleria"
        android:layout_alignTop="@+id/btnCamara"
        android:text="SDK VERSION" />

</RelativeLayout>